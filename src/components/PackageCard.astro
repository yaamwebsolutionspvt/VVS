---
import Button from './Button.astro';
import ReactIcon from './ReactIcon.jsx';

interface Props {
  package: {
    id: string;
    name: string;
    category: string;
    tagline: string;
    description: string;
    image: string;
    duration: string;
    price: number;
    priceUnit?: string;
    originalPrice: number;
    savings: number;
    includes: string[];
    bestFor: string;
    availability: string;
    badge?: string;
  };
}

const { package: pkg } = Astro.props;
const phoneNumber = "8492984991";
const waLink = `https://wa.me/91${phoneNumber}?text=I'm interested in the ${pkg.name} package`;

const savingsPercent = Math.round((pkg.savings / pkg.originalPrice) * 100);
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 group">
  <!-- Image -->
  <div class="relative h-56 overflow-hidden">
    <img 
      src={pkg.image} 
      alt={pkg.name}
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
    
    <!-- Badge -->
    {pkg.badge && (
      <div class="absolute top-4 left-4 bg-vintage-gold text-white px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider">
        {pkg.badge}
      </div>
    )}
    
    <!-- Savings Badge -->
    <div class="absolute top-4 right-4 bg-green-600 text-white px-3 py-1 rounded-full text-sm font-bold">
      Save {savingsPercent}%
    </div>
    
    <!-- Category -->
    <div class="absolute bottom-4 left-4">
      <span class="inline-block bg-vintage-dark/80 backdrop-blur-sm text-vintage-gold px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider">
        {pkg.category}
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <!-- Title & Tagline -->
    <h3 class="text-2xl font-serif font-bold text-vintage-dark mb-1">{pkg.name}</h3>
    <p class="text-sm text-vintage-gold italic mb-3">{pkg.tagline}</p>
    
    <!-- Description -->
    <p class="text-gray-600 text-sm mb-4 leading-relaxed">{pkg.description}</p>

    <!-- Duration & Price -->
    <div class="flex items-center justify-between mb-4 pb-4 border-b border-gray-200">
      <div>
        <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Duration</p>
        <p class="font-bold text-vintage-dark">{pkg.duration}</p>
      </div>
      <div class="text-right">
        <p class="text-xs text-gray-400 line-through">₹{pkg.originalPrice.toLocaleString('en-IN')}</p>
        <p class="text-3xl font-serif font-bold text-vintage-gold">
          ₹{pkg.price.toLocaleString('en-IN')}
          {pkg.priceUnit && <span class="text-sm font-sans text-gray-600">/{pkg.priceUnit}</span>}
        </p>
        <p class="text-xs text-green-600 font-semibold">Save ₹{pkg.savings.toLocaleString('en-IN')}</p>
      </div>
    </div>

    <!-- What's Included -->
    <div class="mb-4">
      <h4 class="font-bold text-vintage-dark mb-3 flex items-center gap-2">
        <ReactIcon name="HiCheckBadge" size={20} className="text-vintage-gold" />
        What's Included
      </h4>
      <ul class="space-y-2">
        {pkg.includes.slice(0, 5).map((item) => (
          <li class="flex items-start gap-2 text-sm text-gray-600">
            <ReactIcon name="HiCheckCircle" size={16} className="text-vintage-gold flex-shrink-0 mt-0.5" />
            <span>{item}</span>
          </li>
        ))}
      </ul>
      {pkg.includes.length > 5 && (
        <button 
          class="text-xs text-vintage-gold hover:text-vintage-dark mt-2 font-semibold transition-colors"
          onclick={`alert('Full list:\\n\\n${pkg.includes.join('\\n')}')`}
        >
          + {pkg.includes.length - 5} more items
        </button>
      )}
    </div>

    <!-- Best For & Availability -->
    <div class="grid grid-cols-2 gap-3 mb-4 text-xs">
      <div class="bg-stone-50 p-3 rounded">
        <p class="text-gray-500 uppercase tracking-wide mb-1">Best For</p>
        <p class="font-semibold text-vintage-dark">{pkg.bestFor}</p>
      </div>
      <div class="bg-stone-50 p-3 rounded">
        <p class="text-gray-500 uppercase tracking-wide mb-1">Availability</p>
        <p class="font-semibold text-vintage-dark">{pkg.availability}</p>
      </div>
    </div>

    <!-- CTA -->
    <Button href={waLink} target="_blank" rel="noopener noreferrer" variant="primary" class="w-full text-center">
      Book This Package
    </Button>
  </div>
</div>

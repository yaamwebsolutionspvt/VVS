---
interface Props {
  title: string;
  subtitle?: string;
  backgroundImage: string;
  ctaText?: string;
  ctaLink?: string;
}

const { title, subtitle, backgroundImage, ctaText, ctaLink } = Astro.props;
---
<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background -->
  <div
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style={`background-image: url(${backgroundImage});`}
  ></div>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-vintage-dark/50"></div>

  <!-- Content -->
  <div class="relative z-10 text-center text-white px-4 max-w-5xl mx-auto">
    {subtitle && (
      <span class="block text-vintage-gold text-lg md:text-xl font-sans font-bold mb-4 tracking-[0.2em] uppercase">
        {subtitle}
      </span>
    )}

    <h1 class="text-5xl md:text-7xl lg:text-8xl font-serif font-bold mb-8 text-white">
      {title}
    </h1>

    {ctaText && ctaLink && (
      <a
        href={ctaLink}
        class="inline-block px-10 py-4 bg-vintage-gold text-vintage-dark font-sans font-bold uppercase tracking-wider hover:bg-white transition-all"
      >
        {ctaText}
      </a>
    )}
  </div>
</section>

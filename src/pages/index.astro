---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
import ReactIcon from '../components/ReactIcon.jsx';
import RoomCard from '../components/RoomCard.astro';
import PackageCard from '../components/PackageCard.astro';
import TestimonialSlider from '../components/TestimonialSlider.astro';
import StatsCounter from '../components/StatsCounter.astro';

// Import data
import roomsData from '../data/rooms.json';
import packagesData from '../data/packages.json';
import testimonialsData from '../data/testimonials.json';
import statsData from '../data/stats.json';

const phoneNumber = "8492984991";
const waLink = `https://wa.me/91${phoneNumber}`;

const heroImage = "https://storage.eduyaam.com/uploads/20260201163243_Gemini_Generated_Image_m4c1yjm4c1yjm4c1.png";
const spaImage = "https://storage.eduyaam.com/uploads/20260123052422_920808ba-ac28-4388-87e8-54544bccbb07.jpg";
const gymImage = "https://storage.eduyaam.com/uploads/20260123052416_d0b56d6b-a7c8-4b38-ae8d-cebcfc0b808b.jpg";
const coffeeImage = "https://images.unsplash.com/photo-1554118811-1e0d58224f24?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80";


// Select featured items
const featuredRooms = roomsData.slice(0, 3); // Top 3 rooms
const featuredPackages = packagesData.filter(p => p.badge || p.category === 'spa' || p.category === 'wellness').slice(0, 4); // Featured packages
---

<Layout 
  title="Vintage Villa & Spa Pahalgam | Luxury Resort, Spa & Gym in Kashmir"
  description="Experience luxury at Vintage Villa & Spa in Pahalgam, Kashmir. Premium spa treatments, modern gym, fine dining & elegant rooms. Book your wellness retreat today!"
  keywords="luxury spa pahalgam, resort in pahalgam, wellness center kashmir, moroccan bath pahalgam, gym in pahalgam, luxury accommodation pahalgam, spa resort kashmir, vintage villa pahalgam, hotel in pahalgam, kashmir spa resort"
  ogType="website"
>
  <Header />
  
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <Hero 
      title="Sanctuary of Serenity"
      subtitle="Welcome to Vintage Villa & Spa"
      backgroundImages={[
        heroImage,
        spaImage,
      ]}
      ctaText="Explore Services"
      ctaLink="/services"
    />

    <!-- Trust Bar / Quick Stats -->
    <section class="py-8 px-4 bg-vintage-dark border-b border-vintage-gold/20">
      <div class="container mx-auto">
        <StatsCounter stats={statsData} darkMode={true} />
      </div>
    </section>

    <!-- Intro Section -->
    <section class="py-24 px-4 bg-vintage-cream text-center relative">
      <div class="max-w-3xl mx-auto relative z-10">
        <span class="text-vintage-gold uppercase tracking-[0.2em] text-sm font-semibold mb-2 block">Redefining Wellness</span>
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-vintage-dark mb-8 leading-tight">Timeless Luxury & <br/>Modern Wellness</h2>
        <div class="w-16 h-0.5 bg-vintage-gold mx-auto mb-8"></div>
        <p class="text-lg md:text-xl text-vintage-text opacity-80 leading-relaxed mb-10 font-light">
          Escape the ordinary and immerse yourself in a world of relaxation. 
          At Vintage Villa, we blend traditional healing with modern fitness 
          to rejuvenate your mind, body, and soul in an atmosphere of old-world charm.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/about" variant="outline">Our Story</Button>
          <Button href={waLink} target="_blank" rel="noopener noreferrer" variant="primary">Book an Appointment</Button>
        </div>
      </div>
    </section>

    <!-- Features / Amenities -->
    <section class="py-16 bg-white border-b border-vintage-cream/50">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div class="p-6 group hover:-translate-y-2 transition-transform duration-300">
            <div class="w-16 h-16 mx-auto bg-vintage-cream rounded-full flex items-center justify-center mb-4 text-vintage-gold group-hover:bg-vintage-gold group-hover:text-white transition-colors">
              <ReactIcon name="RiMedalLine" size={32} />
            </div>
            <h3 class="font-serif text-xl font-bold mb-2">Expert Therapists</h3>
            <p class="text-sm text-gray-600">Certified professionals dedicated to your wellbeing.</p>
          </div>
          <div class="p-6 group hover:-translate-y-2 transition-transform duration-300">
            <div class="w-16 h-16 mx-auto bg-vintage-cream rounded-full flex items-center justify-center mb-4 text-vintage-gold group-hover:bg-vintage-gold group-hover:text-white transition-colors">
              <ReactIcon name="RiHotelBedLine" size={32} />
            </div>
            <h3 class="font-serif text-xl font-bold mb-2">Luxury Suites</h3>
            <p class="text-sm text-gray-600">Exclusive rooms for complete privacy and comfort.</p>
          </div>
          <div class="p-6 group hover:-translate-y-2 transition-transform duration-300">
            <div class="w-16 h-16 mx-auto bg-vintage-cream rounded-full flex items-center justify-center mb-4 text-vintage-gold group-hover:bg-vintage-gold group-hover:text-white transition-colors">
              <ReactIcon name="RiLeafLine" size={32} />
            </div>
            <h3 class="font-serif text-xl font-bold mb-2">Organic Products</h3>
            <p class="text-sm text-gray-600">Sustainable, cruelty-free premium oils and lotions.</p>
          </div>
     
         
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-24 px-4 bg-stone-50">
      <div class="container mx-auto">
        <div class="text-center mb-16">
          <span class="text-vintage-gold font-bold tracking-widest uppercase text-sm">Discover</span>
          <h2 class="text-4xl md:text-5xl font-serif font-bold text-vintage-dark mt-2 mb-6">Our Experiences</h2>
          <p class="max-w-2xl mx-auto text-gray-600">From high-intensity workouts to the deepest state of relaxation, our curated spaces are designed for your lifestyle.</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
          <Card title="Vintage Spa" image={spaImage} href="/services#spa" class="hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
            <p class="text-gray-600 mb-4">Indulge in our signature treatments, massages, and facials designed to restore your inner balance.</p>
          </Card>
          <Card title="Gym Majlis" image={gymImage} href="/services#gym" class="hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
            <p class="text-gray-600 mb-4">State-of-the-art equipment in a sophisticated environment for your fitness journey.</p>
          </Card>
          <Card title="Coffee Shop" image={coffeeImage} href="/services#coffee" class="hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
            <p class="text-gray-600 mb-4">Artisan coffee and healthy bites to fuel your day or relax after a workout.</p>
          </Card>
        </div>
      </div>
    </section>

    <!-- Featured Rooms Section -->
    <section class="py-24 px-4 bg-white">
      <div class="container mx-auto">
        <div class="text-center mb-16">
          <span class="text-vintage-gold font-bold tracking-widest uppercase text-sm">Accommodations</span>
          <h2 class="text-4xl md:text-5xl font-serif font-bold text-vintage-dark mt-2 mb-6">Luxury Rooms & Suites</h2>
          <p class="max-w-2xl mx-auto text-gray-600">Experience unparalleled comfort in our elegantly designed rooms, each offering a unique blend of vintage charm and modern amenities.</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 md:gap-12 mb-12">
          {featuredRooms.map((room) => (
            <RoomCard room={room} />
          ))}
        </div>

        <div class="text-center">
          <Button href="/rooms" variant="primary">View All Rooms</Button>
        </div>
      </div>
    </section>

    <!-- Featured Packages Section -->
    <section class="py-24 px-4 bg-vintage-cream">
      <div class="container mx-auto">
        <div class="text-center mb-16">
          <span class="text-vintage-gold font-bold tracking-widest uppercase text-sm">Special Offers</span>
          <h2 class="text-4xl md:text-5xl font-serif font-bold text-vintage-dark mt-2 mb-6">Exclusive Packages</h2>
          <p class="max-w-2xl mx-auto text-gray-600">Discover our curated wellness packages designed to provide maximum value and transformative experiences.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
          {featuredPackages.map((pkg) => (
            <PackageCard package={pkg} />
          ))}
        </div>

        <div class="text-center">
          <Button href="/packages" variant="outline">View All Packages</Button>
        </div>
      </div>
    </section>

    <!-- Split Section: Signature Treatment -->
    <section class="grid grid-cols-1 md:grid-cols-2">
      <div class="relative h-96 md:h-auto overflow-hidden group">
        <img 
          src="https://images.unsplash.com/photo-1540555700478-4be289fbecef?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80" 
          alt="Moroccan Bath Treatment" 
          class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
        />
      </div>
      <div class="bg-vintage-dark text-vintage-cream p-12 md:p-24 flex flex-col justify-center items-start">
        <span class="text-vintage-gold uppercase tracking-widest mb-4 text-sm font-bold">Signature Treatment</span>
        <h2 class="text-3xl md:text-4xl font-serif mb-6 font-bold">The Royal Moroccan Bath</h2>
        <p class="text-gray-300 leading-relaxed mb-8">
          Experience the purifying ritual of the traditional Hammam. Using black soap, eucalyptus, and full-body exfoliation, this treatment leaves your skin glowing and your spirit renewed.
        </p>
        <Button href="/services/moroccan-bath" variant="primary">Learn More</Button>
      </div>
    </section>
<!-- Visual Gallery Grid -->
    <section class="py-20 px-4 bg-white">
      <div class="container mx-auto">
        <div class="text-center mb-12">
          <span class="text-vintage-gold font-bold tracking-widest uppercase text-sm">Gallery</span>
          <h2 class="text-4xl md:text-5xl font-serif font-bold text-vintage-dark mt-2 mb-6">A Glimpse Inside</h2>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
           <div class="col-span-2 row-span-2 relative overflow-hidden rounded-lg group h-96">
             <img src={spaImage} class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-105" alt="Spa Interior" />
           </div>
           <div class="relative overflow-hidden rounded-lg group h-48">
             <img src="https://images.unsplash.com/photo-1519823551278-64ac92734fb1?ixlib=rb-4.0.3" class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-105" alt="Treatment Room" />
           </div>
           <div class="relative overflow-hidden rounded-lg group h-48">
             <img src="https://images.unsplash.com/photo-1591343395082-e120087004b4?ixlib=rb-4.0.3" class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-105" alt="Relaxation Area" />
           </div>
           <div class="col-span-2 relative overflow-hidden rounded-lg group h-48">
             <img src={gymImage} class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-105" alt="Gym Facilities" />
           </div>
        </div>

        <div class="text-center">
          <Button href="/gallery" variant="outline">View Full Gallery</Button>
        </div>
      </div>
    </section>
    <!-- Testimonials Slider -->
    <section class="py-24 px-4 bg-vintage-green text-vintage-cream relative overflow-hidden">
      <!-- Background Texture -->
      <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
      
      <div class="relative z-10 container mx-auto">
        <div class="text-center mb-12">
          <span class="text-vintage-gold font-bold tracking-widest uppercase text-sm">Testimonials</span>
          <h2 class="text-4xl md:text-5xl font-serif font-bold text-white mt-2 mb-6">What Our Guests Say</h2>
        </div>

        <TestimonialSlider testimonials={testimonialsData} autoRotate={true} interval={6000} />
      </div>
    </section>

    

    

    <!-- Final CTA Section -->
    <section class="py-20 px-4 bg-vintage-dark text-white relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <img src={spaImage} class="w-full h-full object-cover" alt="Background" />
      </div>

      <div class="relative z-10 container mx-auto text-center max-w-4xl">
        <h2 class="text-4xl md:text-5xl font-serif font-bold mb-6">Ready to Begin Your Wellness Journey?</h2>
        <p class="text-xl text-white/90 mb-10 leading-relaxed">
          Book your appointment today and discover why thousands of guests choose Vintage Villa for their wellness needs.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <Button href={waLink} target="_blank" rel="noopener noreferrer" variant="primary" class="text-lg px-8 py-4">
            Book via WhatsApp
          </Button>
          <Button href="/contact" variant="outline" class="text-lg px-8 py-4 border-white text-white hover:bg-white hover:text-vintage-dark">
            Contact Us
          </Button>
        </div>

        <div class="flex flex-wrap justify-center gap-6 text-sm text-white/70">
          <div class="flex items-center gap-2">
            <ReactIcon name="HiCheckCircle" className="text-vintage-gold" size={16} />
            <span>Same-day appointments available</span>
          </div>
          <div class="flex items-center gap-2">
            <ReactIcon name="HiCheckCircle" className="text-vintage-gold" size={16} />
            <span>Free consultation</span>
          </div>
          <div class="flex items-center gap-2">
            <ReactIcon name="HiCheckCircle" className="text-vintage-gold" size={16} />
            <span>Flexible cancellation</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter -->
    <section class="py-16 px-4 bg-vintage-cream border-t border-stone-200">
      <div class="max-w-xl mx-auto text-center">
        <h3 class="text-2xl md:text-3xl font-serif text-vintage-dark mb-2 font-bold">Join Our Mailing List</h3>
        <p class="text-gray-600 mb-6">Receive exclusive offers, wellness tips, and event invitations.</p>
        <form class="flex flex-col sm:flex-row gap-2">
          <input 
            type="email" 
            placeholder="Your email address" 
            required
            class="flex-1 px-4 py-3 border border-gray-300 rounded-sm focus:outline-none focus:border-vintage-gold focus:ring-1 focus:ring-vintage-gold" 
          />
          <button 
            type="submit"
            class="bg-vintage-dark text-white px-6 py-3 font-semibold uppercase tracking-wide hover:bg-vintage-gold transition-colors rounded-sm"
          >
            Subscribe
          </button>
        </form>
        <p class="text-xs text-gray-500 mt-3">We respect your privacy. Unsubscribe anytime.</p>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
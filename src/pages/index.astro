---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';

const heroImage = "https://storage.eduyaam.com/uploads/20260124033937_20260123052436_3402059d-4810-4b14-af6d-362d9627ca37.jpg";
const spaImage = "https://storage.eduyaam.com/uploads/20260123052422_920808ba-ac28-4388-87e8-54544bccbb07.jpg";
const gymImage = "https://storage.eduyaam.com/uploads/20260123052409_5b56515d-b8d5-4db7-965d-fcdb52ac3d5d.jpg?v=1";
const coffeeImage = "https://storage.eduyaam.com/uploads/20260123052416_d0b56d6b-a7c8-4b38-ae8d-cebcfc0b808b.jpg";
---

<Layout title="Vintage Villa and Spa | Luxury Wellness Center">
  <Header />
  
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <Hero 
      title="Sanctuary of Serenity"
      subtitle="Welcome to Vintage Villa"
      backgroundImage={heroImage}
      ctaText="Explore Services"
      ctaLink="/services"
    />

    <!-- Intro Section with subtle pattern -->
    <section class="py-24 px-4 bg-vintage-cream text-center relative">
      <div class="max-w-3xl mx-auto relative z-10">
        <span class="text-vintage-gold uppercase tracking-[0.2em] text-sm font-semibold mb-2 block">Redefining Wellness</span>
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-vintage-dark mb-8 leading-tight">Timeless Luxury & <br/>Modern Wellness</h2>
        <div class="w-16 h-0.5 bg-vintage-gold mx-auto mb-8"></div>
        <p class="text-lg md:text-xl text-vintage-text opacity-80 leading-relaxed mb-10 font-light">
          Escape the ordinary and immerse yourself in a world of relaxation. 
          At Vintage Villa, we blend traditional healing with modern fitness 
          to rejuvenate your mind, body, and soul in an atmosphere of old-world charm.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/about" variant="outline">Our Story</Button>
          <Button href="/booking" variant="primary">Book an Appointment</Button>
        </div>
      </div>
    </section>

    <!-- Features / Amenities (Icons) -->
    <section class="py-16 bg-white border-b border-vintage-cream/50">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
          <!-- Feature 1 -->
          <div class="p-6 group hover:-translate-y-2 transition-transform duration-300">
            <div class="w-16 h-16 mx-auto bg-vintage-cream rounded-full flex items-center justify-center mb-4 text-vintage-gold group-hover:bg-vintage-gold group-hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" /></svg>
            </div>
            <h3 class="font-serif text-xl font-bold mb-2">Expert Therapists</h3>
            <p class="text-sm text-gray-600">Certified professionals dedicated to your wellbeing.</p>
          </div>
          <!-- Feature 2 -->
          <div class="p-6 group hover:-translate-y-2 transition-transform duration-300">
            <div class="w-16 h-16 mx-auto bg-vintage-cream rounded-full flex items-center justify-center mb-4 text-vintage-gold group-hover:bg-vintage-gold group-hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
            </div>
            <h3 class="font-serif text-xl font-bold mb-2">Private Suites</h3>
            <p class="text-sm text-gray-600">Exclusive rooms for complete privacy and calm.</p>
          </div>
          <!-- Feature 3 -->
          <div class="p-6 group hover:-translate-y-2 transition-transform duration-300">
            <div class="w-16 h-16 mx-auto bg-vintage-cream rounded-full flex items-center justify-center mb-4 text-vintage-gold group-hover:bg-vintage-gold group-hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
            <h3 class="font-serif text-xl font-bold mb-2">Organic Products</h3>
            <p class="text-sm text-gray-600">Sustainable, cruelty-free premium oils and lotions.</p>
          </div>
          <!-- Feature 4 -->
          <div class="p-6 group hover:-translate-y-2 transition-transform duration-300">
            <div class="w-16 h-16 mx-auto bg-vintage-cream rounded-full flex items-center justify-center mb-4 text-vintage-gold group-hover:bg-vintage-gold group-hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
            <h3 class="font-serif text-xl font-bold mb-2">Ladies Only Hours</h3>
            <p class="text-sm text-gray-600">Dedicated times for comfort and privacy.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-24 px-4 bg-stone-50">
      <div class="container mx-auto">
        <div class="text-center mb-16">
          <span class="text-vintage-gold font-bold tracking-widest uppercase">Discover</span>
          <h2 class="text-4xl md:text-5xl font-serif font-bold text-vintage-dark mt-2 mb-6">Our Experiences</h2>
          <p class="max-w-2xl mx-auto text-gray-600">From high-intensity workouts to the deepest state of relaxation, our curated spaces are designed for your lifestyle.</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
          <Card title="Vintage Spa" image={spaImage} href="/services#spa" class="hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
            <p class="text-gray-600 mb-4">Indulge in our signature treatments, massages, and facials designed to restore your inner balance.</p>
            <span class="text-vintage-gold font-bold text-sm uppercase tracking-wide group-hover:underline">View Treatments &rarr;</span>
          </Card>
          <Card title="Gym Majlis" image={gymImage} href="/services#gym" class="hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
            <p class="text-gray-600 mb-4">State-of-the-art equipment in a sophisticated environment for your fitness journey.</p>
            <span class="text-vintage-gold font-bold text-sm uppercase tracking-wide group-hover:underline">View Facilities &rarr;</span>
          </Card>
          <Card title="Coffee Shop" image={coffeeImage} href="/services#coffee" class="hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
            <p class="text-gray-600 mb-4">Artisan coffee and healthy bites to fuel your day or relax after a workout.</p>
            <span class="text-vintage-gold font-bold text-sm uppercase tracking-wide group-hover:underline">View Menu &rarr;</span>
          </Card>
        </div>
      </div>
    </section>

    <!-- Split Section: Highlight -->
    <section class="grid grid-cols-1 md:grid-cols-2">
      <div class="relative h-96 md:h-auto overflow-hidden group">
        <img 
          src="https://images.unsplash.com/photo-1544161515-4ab6ce6db874?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80" 
          alt="Massage Therapy" 
          class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
        />
      </div>
      <div class="bg-vintage-dark text-vintage-cream p-12 md:p-24 flex flex-col justify-center items-start">
        <span class="text-vintage-gold uppercase tracking-widest mb-4">Signature Treatment</span>
        <h2 class="text-3xl md:text-4xl font-serif mb-6">The Royal Moroccan Bath</h2>
        <p class="text-gray-300 leading-relaxed mb-8">
          Experience the purifying ritual of the traditional Hammam. Using black soap, eucalyptus, and full-body exfoliation, this treatment leaves your skin glowing and your spirit renewed.
        </p>
        <Button href="/services/moroccan-bath" variant="primary">Learn More</Button>
      </div>
    </section>

    <!-- Membership Banner -->
    <section class="py-20 px-4 bg-vintage-gold/10 relative">
      <div class="container mx-auto bg-white rounded-lg shadow-xl overflow-hidden">
        <div class="flex flex-col md:flex-row items-center">
          <div class="p-10 md:w-2/3">
            <h3 class="text-3xl font-serif font-bold text-vintage-dark mb-4">Join the Gym Majlis</h3>
            <p class="text-gray-600 mb-6 text-lg">
              Unlock exclusive access to our premium fitness facilities, personal training sessions, and member-only spa discounts.
            </p>
            <div class="flex flex-wrap gap-4">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-vintage-gold" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                <span>24/7 Access</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-vintage-gold" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                <span>Free Assessment</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-vintage-gold" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                <span>Spa Credits</span>
              </div>
            </div>
          </div>
          <div class="md:w-1/3 bg-vintage-gold p-10 text-center text-white h-full w-full flex flex-col justify-center">
            <span class="text-sm uppercase opacity-90 mb-2">Starting from</span>
            <span class="text-4xl font-serif font-bold mb-6">$99<span class="text-lg font-sans font-normal">/mo</span></span>
            <Button href="/membership" variant="outline" class="border-white text-white hover:bg-white hover:text-vintage-gold">View Plans</Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Visual Gallery Grid -->
    <section class="py-12 px-4 bg-white">
      <div class="container mx-auto">
        <h2 class="text-center text-3xl font-serif mb-10">A Glimpse Inside</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 h-96">
           <div class="col-span-2 row-span-2 relative overflow-hidden rounded-lg group">
             <img src={spaImage} class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-105" alt="Main Spa" />
           </div>
           <div class="relative overflow-hidden rounded-lg group">
             <img src="https://images.unsplash.com/photo-1519823551278-64ac92734fb1?ixlib=rb-4.0.3" class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-105" alt="Detail 1" />
           </div>
           <div class="relative overflow-hidden rounded-lg group">
             <img src="https://images.unsplash.com/photo-1591343395082-e120087004b4?ixlib=rb-4.0.3" class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-105" alt="Detail 2" />
           </div>
           <div class="col-span-2 relative overflow-hidden rounded-lg group">
             <img src={coffeeImage} class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-105" alt="Coffee" />
           </div>
        </div>
      </div>
    </section>

    <!-- Testimonials / Quote -->
    <section class="py-24 px-4 bg-vintage-green text-vintage-cream text-center relative overflow-hidden">
      <!-- Background Texture Overlay -->
      <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
      
      <div class="relative z-10 max-w-4xl mx-auto">
        <div class="mb-8">
           <svg class="w-12 h-12 text-vintage-gold mx-auto opacity-80" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21L14.017 18C14.017 16.0547 15.372 15.5508 16.3076 15.5508C17.4331 15.5508 19 16.2949 19 18C19 18.2578 19 21 19 21H23V18C23 14.1621 19.5391 12 16.3076 12C14.7715 12 14.017 12 14.017 12V9C14.017 9 14.7246 9 16.1201 9C19.7246 9 22 6.64258 22 2H18C18 3.55469 16.9248 4 16.1201 4C14.8682 4 14.017 2.94922 14.017 2H10V12H6.98291C8.51855 12 9.27344 12 9.27344 12V15C9.27344 15 8.56641 15 7.1709 15C3.56641 15 1.29102 17.3574 1.29102 22H5.29102C5.29102 20.4453 6.36621 20 7.1709 20C8.42188 20 9.27344 21.0508 9.27344 21H14.017Z" />
          </svg>
        </div>
        
        <blockquote class="text-2xl md:text-4xl font-serif italic leading-relaxed mb-10 text-white">
          "A truly magical place. The spa treatments are world-class and the atmosphere is simply breathtaking."
        </blockquote>
        
        <div class="flex items-center justify-center gap-4">
          <div class="w-12 h-12 rounded-full bg-gray-300 overflow-hidden">
             <!-- Placeholder Avatar -->
             <img src="https://i.pravatar.cc/150?img=32" alt="User Avatar" class="w-full h-full object-cover">
          </div>
          <div class="text-left">
            <cite class="text-vintage-gold font-sans font-bold uppercase tracking-widest not-italic block">Sarah Mitchell</cite>
            <span class="text-xs text-white/60 uppercase tracking-wide">Regular Guest</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter -->
    <section class="py-16 px-4 bg-vintage-cream border-t border-stone-200">
      <div class="max-w-xl mx-auto text-center">
        <h3 class="text-2xl font-serif text-vintage-dark mb-2">Join Our Mailing List</h3>
        <p class="text-gray-600 mb-6">Receive exclusive offers, wellness tips, and event invitations.</p>
        <form class="flex gap-2">
          <input type="email" placeholder="Your email address" class="flex-1 px-4 py-3 border border-gray-300 rounded-sm focus:outline-none focus:border-vintage-gold" />
          <button class="bg-vintage-dark text-white px-6 py-3 font-semibold uppercase tracking-wide hover:bg-vintage-gold transition-colors">Subscribe</button>
        </form>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Button from '../components/Button.astro';

const heroImage = "https://storage.eduyaam.com/uploads/20260123052436_3402059d-4810-4b14-af6d-362d9627ca37.jpg";
---

<Layout title="Contact Us | Vintage Villa and Spa">
  <Header />

  <Hero 
    title="Contact Us"
    subtitle="Get in Touch"
    backgroundImage={heroImage}
  />

  <section class="py-20 px-4 bg-vintage-cream">
    <div class="container mx-auto grid grid-cols-1 md:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div>
        <h2 class="text-3xl font-serif font-bold text-vintage-dark mb-6">Visit Us</h2>
        <p class="text-vintage-text opacity-80 mb-8">
          We are located in the heart of the city, offering a quick escape from the daily hustle. 
          Reach out to us for appointments or membership inquiries.
        </p>
        
        <div class="space-y-6">
          <div class="flex items-start">
            <span class="text-vintage-gold text-2xl mr-4">üìç</span>
            <div>
              <h4 class="font-bold text-vintage-dark">Address</h4>
              <p class="text-vintage-text opacity-80">123 Luxury Lane, Wellness City, WC 54321</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <span class="text-vintage-gold text-2xl mr-4">üìû</span>
            <div>
              <h4 class="font-bold text-vintage-dark">Phone</h4>
              <p class="text-vintage-text opacity-80">+123 456 7890</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <span class="text-vintage-gold text-2xl mr-4">‚úâÔ∏è</span>
            <div>
              <h4 class="font-bold text-vintage-dark">Email</h4>
              <p class="text-vintage-text opacity-80">info@vintagevilla.com</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-white p-8 shadow-lg rounded-sm border-t-4 border-vintage-gold">
        <h3 class="text-2xl font-serif font-bold text-vintage-dark mb-6">Send a Message</h3>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-bold text-vintage-dark mb-2">Name</label>
            <input type="text" id="name" name="name" class="w-full px-4 py-2 border border-gray-300 focus:border-vintage-gold focus:ring-1 focus:ring-vintage-gold outline-none transition-colors" placeholder="Your Name" />
          </div>
          <div>
            <label for="email" class="block text-sm font-bold text-vintage-dark mb-2">Email</label>
            <input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 focus:border-vintage-gold focus:ring-1 focus:ring-vintage-gold outline-none transition-colors" placeholder="your@email.com" />
          </div>
          <div>
            <label for="message" class="block text-sm font-bold text-vintage-dark mb-2">Message</label>
            <textarea id="message" name="message" rows="4" class="w-full px-4 py-2 border border-gray-300 focus:border-vintage-gold focus:ring-1 focus:ring-vintage-gold outline-none transition-colors" placeholder="How can we help you?"></textarea>
          </div>
          <Button type="submit" class="w-full text-center">Send Message</Button>
        </form>
      </div>
    </div>
  </section>

  <!-- Map Placeholder -->
  <section class="h-[400px] w-full bg-gray-200 flex items-center justify-center">
    <p class="text-vintage-dark font-bold text-xl opacity-50">Google Maps Embed Placeholder</p>
  </section>

  <Footer />
</Layout>
